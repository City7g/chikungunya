.popup.popup-form
  .popup__wrap.popup-form__wrap
    h3.title-h3.popup-form__title Share Your Story
    form.main-form.popup-form__form(data-name="share")
      label.main-form__input
        h4 First Name
        input(type="text", placeholder="First Name", name="first")
        span.main-form__error  Please enter valid first name.
      label.main-form__input
        h4 Last Name
        input(type="text", placeholder="Last Name", name="last")
        span.main-form__error  Please enter valid last name.
      label.main-form__input
        h4 E-mail
        input(type="email", placeholder="E-mail", name="email")
        span.main-form__error Please enter valid e-mail address.
      label.main-form__textarea
        h4 Your Story
        textarea(type="text", placeholder="Enter your story here", name="text")
        span.main-form__error Please enter your story.
      label.main-form__checkbox
        input(type="checkbox")
        span
        span By clicking this box, I confirm that I am 18 years of age or older, a resident of the U.S. and am indicating that I would like to receive information from Emergent Biosolutions and/or be contacted regarding chikungunya and my experiences
      label.main-form__checkbox
        input(type="checkbox")
        span
        span I have read and agree to the <a href="/privacy.html" target="_blank">Privacy Policy</a>.
      button(type="submit").main-button.main-form__button Submit
    .popup__close.popup-form__close